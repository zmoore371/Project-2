<div class="profile-top flex flex-column align-center">

    <div class="flex flex-column accMyReview shadow-lg">
        <div class="rev-title">
            <p1 class="accHeader"><strong>My Reviews</strong></p1>
        </div>
        <div class="rev-body" id="rev-body">
            {{> profileReview}}
        </div>
    </div>


    <div class="accAddReview shadow-lg">
        {{> createReview}}
    </div>


    <div class="accInformation shadow-lg">
        <h1 class="about-section"><strong>About</strong></h1><br>
        <p class="member-name" id="full-name"><i class="fa fa-user" aria-hidden="true"></i> {{ user.firstName }} {{
            user.lastName }} </p>
        <p class="username" id="username"><i class="fa fa-id-badge" aria-hidden="true"></i> @{{ user.username }}</p>
        <p class="location" id="location"><i class="fa fa-map-marker" aria-hidden="true"></i> {{ user.location }}</p>
    </div>
</div>


<script src="https://use.fontawesome.com/a6f0361695.js"></script>
<script src="js/myaccount.js"></script>